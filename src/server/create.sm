/* Write keyval attributes of the metadata object
 * ADD BACKPOINTER V3
 */
static PINT_sm_action write_keyvals(struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_server_op *s_op = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    int ret = -1;
    job_id_t j_id;

    /* start with 2 keyvals: the distribution and the datafile handles */
    int keyval_count = 3;

    s_op->key_a = malloc(sizeof(PVFS_ds_keyval) * keyval_count);
    if(!s_op->key_a)
    {
        js_p->error_code = -PVFS_ENOMEM;
        return SM_ACTION_COMPLETE;
    }
    ZEROMEM(s_op->key_a, (sizeof(PVFS_ds_keyval) * keyval_count));

    s_op->val_a = malloc(sizeof(PVFS_ds_keyval) * keyval_count);
    if(!s_op->val_a)
    {
        free(s_op->key_a);
        js_p->error_code = -PVFS_ENOMEM;
        return SM_ACTION_COMPLETE;
    }
    ZEROMEM(s_op->val_a, sizeof((PVFS_ds_keyval) * keyval_count));

    /* writing list of handles/sids for datafile handles and sids*/
    s_op->key_a[0].buffer_sz = Trove_Common_Keys[METAFILE_HANDLES_KEY].size;
    s_op->key_a[0].buffer =    Trove_Common_Keys[METAFILE_HANDLES_KEY].key;

    s_op->val_a[0].buffer_sz = OSASZ(s_op->req->u.create.attr.u.meta.dfile_count,
                                     s_op->req->u.create.attr.u.meta.sid_count);
    s_op->val_a[0].buffer =    s_op->req->u.create.attr.u.meta.dfile_array;

    keep_keyval_buffers(s_op, 0);

    /* writing distribution for the metafile */
    s_op->key_a[1].buffer_sz = Trove_Common_Keys[METAFILE_DIST_KEY].size;
    s_op->key_a[1].buffer =    Trove_Common_Keys[METAFILE_DIST_KEY].key;

    s_op->val_a[1].buffer_sz = s_op->req->u.create.attr.u.meta.dist_size;
    s_op->val_a[1].buffer =    malloc(s_op->val_a[1].buffer_sz);

    if(!s_op->val_a[1].buffer)
    {
        js_p->error_code = -PVFS_ENOMEM;
        return SM_ACTION_COMPLETE;
    }
    ZEROMEM(s_op->val_a[1].buffer, s_op->val_a[1].buffer_sz);

    PINT_dist_encode(s_op->val_a[1].buffer,
                     s_op->req->u.create.attr.u.meta.dist);

    /* writing object parent handle and sids */
    s_op->key_a[2].buffer_sz = Trove_Common_Keys[OBJECT_PARENT_KEY].size;
    s_op->key_a[2].buffer =    Trove_Common_Keys[OBJECT_PARENT_KEY].key;

    /* datafile handle and sids should be contiguous */
    s_op->val_a[2].buffer_sz = OSASZ(1, s_op->req->u.create.parent.sid_count);
    /* s_op->val_a[2].buffer =    &s_op->req->u.create.parent.handle; */

    /* modification because object_ref does not store OID and SIDs together */
    s_op->val_a[2].buffer =    malloc(s_op->val_a[2].buffer_sz);

    if(!s_op->val_a[2].buffer)
    {
        js_p->error_code = -PVFS_ENOMEM;
        return SM_ACTION_COMPLETE;
    }
    ZEROMEM(s_op->val_a[2].buffer, s_op->val_a[2].buffer_sz);

    memcpy(s_op->val_a[2].buffer,
          &s_op->req->u.create.parent.handle,
          sizeof(PVFS_OID));

    memcpy(((char*)s_op->val_a[2].buffer) + sizeof(PVFS_OID),
           s_op->req->u.create.parent.sid_array,
           s_op->req->u.create.parent.sid_count * sizeof(PVFS_OID));
    /* modification because object_ref does not store OID and SIDs together */

    ret = job_trove_keyval_write_list(s_op->req->u.create.object.fs_id,
                                      s_op->req->u.create.object.handle, /*metafile*/
                                      s_op->key_a,
                                      s_op->val_a,
                                      keyval_count,
                                      TROVE_SYNC, /* flags */
                                      NULL,       /* vtag */
                                      smcb,       /* user_ptr */
                                      0,          /* status_user_tag */
                                      js_p,
                                      &j_id,
                                      server_job_context,
                                      s_op->req->hints);
    return ret;
}

/*
 * writes the standard attributes to the metafile object in the dspace
 */
static PINT_sm_action write_metafile_attribs(struct PINT_smcb *smcb,
                                             job_status_s *js_p)
{
    struct PINT_server_op *s_op = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    int ret = -1;
    job_id_t j_id;
    PVFS_object_attr *a_p = NULL;
    PVFS_object_attr *dspace_a_p = NULL;
    PVFS_ds_attributes *ds_attr = NULL;
#ifdef ENABLE_SECURITY_CERT    
    PVFS_uid uid;
    PVFS_gid group_array[PVFS_REQ_LIMIT_GROUPS];
    uint32_t num_groups;
#endif

    /* we will build new metafile attribs in the attr field of s_op */
    dspace_a_p = &s_op->attr;
    /* this points to the attributes passed with the request */
    a_p = &s_op->req->u.create.attr;

    /*
     * we have the attribs stored in the dspace, as well as the
     * requested attribs to store.  overwrite the ones that are setable
     * and specified by the mask value in the request; macro defined in
     * pvfs2-storage.h
     */
    PVFS_object_attr_overwrite_setable(dspace_a_p, a_p);

    /* update fields passed in the request but stored in the dspace
     * attributes.
     * for whatever reason we aren't getting the time passed from the
     * user (client) there is no reason we can't set it here.
     */
    dspace_a_p->u.meta.dfile_count = s_op->req->u.create.attr.u.meta.dfile_count;
    dspace_a_p->u.meta.sid_count = s_op->req->u.create.attr.u.meta.sid_count;
    dspace_a_p->atime = dspace_a_p->ctime = dspace_a_p->mtime = 
                      dspace_a_p->ntime = PINT_util_get_current_time();

#ifdef ENABLE_SECURITY_CERT
    /*                                                              
     * if owner info is missing, map from credential
     * note that user must have admin rights to set owner info
     * to another user (see perm_create() below)
     */
    num_groups = PVFS_REQ_LIMIT_GROUPS;

    ret = PINT_map_credential(&s_op->req->u.create.credential,
                              &uid,
                              &num_groups,
                              group_array);
    if (ret != 0)
    {
        js_p->error_code = ret;
        return SM_ACTION_COMPLETE;
    }

    dspace_a_p->owner = uid;

    /* for cert mode we use a hint provided by the client */
    dspace_a_p->group = PINT_HINT_GET_OWNER_GID(s_op->req->hints);
    if (dspace_a_p->group == PVFS_GID_MAX)
    {
        gossip_err("%s: warning: no owner gid hint\n", __func__);
        dspace_a_p->group = group_array[0];
    }
#endif

    gossip_debug(
         GOSSIP_SERVER_DEBUG,
         "[STUFFED CREATE]: WRITING attrs: [owner = %d, group = %d\n\t"
         "perms = %o, type = %d, atime = %llu, mtime = %llu\n\t"
         "ctime = %llu | dfile_count = %d | dist_size = %d]\n",
         dspace_a_p->owner, dspace_a_p->group, dspace_a_p->perms,
         dspace_a_p->objtype, llu(dspace_a_p->atime),
         llu(PINT_util_mkversion_time(dspace_a_p->mtime)),
         llu(dspace_a_p->ctime),
         (int)dspace_a_p->u.meta.dfile_count,
         (int)dspace_a_p->u.meta.dist_size);

    /* translate attrs to storage attr format */
    ds_attr = &(s_op->ds_attr);
    PVFS_ds_attr_from_object_attr(ds_attr, dspace_a_p);

    ret = job_trove_dspace_setattr(s_op->req->u.create.object.fs_id,
                                   s_op->req->u.create.object.handle, /* metafile */
                                   ds_attr,
                                   TROVE_SYNC, /* flags */
                                   smcb,       /* user_ptr */
                                   0,          /* status_user_tag */
                                   js_p,
                                   &j_id,
                                   server_job_context,
                                   s_op->req->hints);
    return ret;
}

static PINT_sm_action setup_resp(struct PINT_smcb *smcb,
                                        job_status_s *js_p)
{    
    struct PINT_server_op *s_op = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);

    /* V3 add debugging of sids and soforth */
    if (js_p->error_code == 0)
    {
        PINT_ACCESS_DEBUG(s_op,
                          GOSSIP_ACCESS_DEBUG,
                          "create: new metadata handle: %s.\n",
                          PVFS_OID_str(&s_op->req->u.create.object.handle));
    }

    /* Copy attributes from the s_op's attribes (the ones written to Trove)
     * into the attributes being sent back in the reply.  Should we just
     * copy all of the attributes?
     */
    /* NOTE:  Distribution was sent from the client in the
     * original request structure, so there's no need to
     * send the same information back.
     */
    if (s_op->attr.owner >= 0)
    {
        s_op->resp.u.create.metafile_attrs.owner = s_op->attr.owner;
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_UID;
    }

    if (s_op->attr.group >= 0)
    {
        s_op->resp.u.create.metafile_attrs.group = s_op->attr.group;
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_GID;
    }

    if (s_op->attr.perms)
    {
        s_op->resp.u.create.metafile_attrs.perms = s_op->attr.perms;
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_PERM;
    }

    if (s_op->attr.ntime)
    {
        s_op->resp.u.create.metafile_attrs.ntime = s_op->attr.ntime;
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_NTIME;
    }

    if (s_op->attr.atime)
    {
        s_op->resp.u.create.metafile_attrs.atime = s_op->attr.atime;
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_ATIME;
    }
    if (s_op->attr.mtime)
    {
        /* Must "un-version" mtime before sending back to client:
         * When the mtime is stored in dspace in the setobj_attribs state,
         * the mtime is "versioned", i.e., the time, given in seconds since
         * the Epoch, is modified using PINT_util_mktime_version().
         */
        s_op->resp.u.create.metafile_attrs.mtime =
                            PINT_util_mkversion_time(s_op->attr.mtime);
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_MTIME;
    }

    if (s_op->attr.ctime)
    {
        s_op->resp.u.create.metafile_attrs.ctime = s_op->attr.ctime;
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_CTIME;
    }

    if (s_op->attr.objtype)
    {
        s_op->resp.u.create.metafile_attrs.objtype = s_op->attr.objtype;
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_COMMON_TYPE;
    }

    if (s_op->resp.u.create.metafile_attrs.u.meta.dist_size &&
        s_op->resp.u.create.metafile_attrs.u.meta.dist)
    {
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_META_DIST;
    }

    if (s_op->resp.u.create.metafile_attrs.u.meta.dfile_count &&
        s_op->resp.u.create.metafile_attrs.u.meta.dfile_array)
    {
        s_op->resp.u.create.metafile_attrs.mask |= PVFS_ATTR_META_DFILES;
    }

    s_op->resp.u.create.metafile_attrs.u.meta.size = 0;
    s_op->resp.u.create.metafile_attrs.u.meta.flags = 0;

    /* don't need to return handle, was passed from client */
#if 0
    if (js_p->error_code == 0)
    {
         PINT_ACCESS_DEBUG(s_op, GOSSIP_ACCESS_DEBUG,
                           "create: new metadata handle: %llu.\n",
                           llu(s_op->resp.u.create.metafile_handle));
    }
#endif

    return SM_ACTION_COMPLETE;
}

